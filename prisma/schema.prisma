generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Destination {
  id BigInt @id @default(autoincrement())	
  name String
  slug String @unique
  description String
  image String?
  latitude Decimal?
  longitude Decimal?
  created_at DateTime
  updated_at DateTime

  @@map("destinations")
}
